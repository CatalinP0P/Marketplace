<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> Marketplace - Cumpara si vinde </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Marketplace.styles.css" asp-append-version="true" />    

</head>
<body background="#f2f4f5" style="background-color: #f2f4f5;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm text-dark border-bottom box-shadow" style="background-color: #002f34;">
            <div class="container">
                <a style="color: #23e5db;" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Marketplace</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @* <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li> *@
                    </ul>
                    
                    <partial name="_LoginPartial" style="margin-right: 20px"/>
                    
                    <!-- Adaugare Anunt -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid g-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Marketplace - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<script>
    var button = document.getElementById("anunturiButton");
    button.classList.add("visible")
</script>

<style>
    .anunturiButton
    {
        opacity: 0;
        pointer-events: none;
    }

    .anunturiButton.visible
    {
        opacity: 1;
        pointer-events: all;
    }

</style>
