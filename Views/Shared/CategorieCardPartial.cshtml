@model Marketplace.Models.Categorie;

<div class="col-3 col-sm-2 col-lg-1">
    <div class="card bg-white border-0">
        <a asp-action="Index" asp-controller="Oferte" asp-route-categorie="@Model.Name" >
            <div class="div" style="border-radius: 100%; background-color : #ffcf32;">
                <img class="card-img-top rounded" src="@Model.Image" >
            </div>
        </a>
        
        
        <div class="card-body">
            <div class="card-center">
                <label> @Model.Name </label>
            </div>
        </div>
    </div>
</div>

<style>
    .card-center
    {
        align-items: center;
        text-align: center;
    }
</style>